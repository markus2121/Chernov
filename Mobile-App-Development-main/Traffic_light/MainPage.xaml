<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Traffic_light.MainPage">

    <StackLayout x:Name="Main">
        <Button x:Name="red" Text="Красный" Clicked="red_Clicked" FontSize="16" VerticalOptions="CenterAndExpand" HorizontalOptions="Center"/>
        <Button x:Name="yellow" Text="Желтый" Clicked="yellow_Clicked" FontSize="16" VerticalOptions="CenterAndExpand" HorizontalOptions="Center"/>
        <Button x:Name="green" Text="Зелёный" Clicked="green_Clicked" FontSize="16" VerticalOptions="CenterAndExpand" HorizontalOptions="Center"/>

    </StackLayout>

</ContentPage>
